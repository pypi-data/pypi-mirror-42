      adsurl        = {http://adsabs.harvard.edu/abs/2012ascl.soft08017R},
      adsnote       = {Provided by the SAO/NASA Astrophysics Data System}
    }

    @misc{aplpy2019,
      author       = {Robitaille, Thomas},
      title        = {{APLpy v2.0: The Astronomical Plotting Library in Python}},
