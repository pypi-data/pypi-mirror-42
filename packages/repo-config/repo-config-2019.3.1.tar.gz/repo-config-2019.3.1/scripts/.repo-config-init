#!/usr/bin/env bash
{ set +x; } 2>/dev/null

usage() {
    cat <<EOF 1>&2
usage: $(basename $0) path
EOF
    [[ $1 == "-h" ]] || [[ $1 == "--help" ]]; exit
}

[[ $1 == "-h" ]] || [[ $1 == "--help" ]] && usage "$@"
[[ $# != 1 ]] && usage

REPO_CONFIG_FOLDER="${REPO_CONFIG_FOLDER-.config}"

! [ -e "$REPO_CONFIG_FOLDER" ] && { mkdir "$REPO_CONFIG_FOLDER" || exit; };:
# todo: init.sh
