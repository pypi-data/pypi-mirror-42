#!/usr/bin/env bash
{ set +x; } 2>/dev/null

usage() {
    echo "usage: $(basename $0) list path ..."
    [[ $1 == "-h" ]] || [[ $1 == "--help" ]]; exit
}

[[ $1 == "-h" ]] || [[ $1 == "--help" ]] && usage "$@"

XDG_CONFIG_HOME="${XDG_CONFIG_HOME-$HOME/.config}"
EXECDIR="${EXECDIR-$XDG_CONFIG_HOME/execdir}"
! [ -d "$EXECDIR" ] && { mkdir -p "$EXECDIR" || exit; }

path="$EXECDIR/$1".txt

IFS=$'\n'
echo "${*:2}" > "$path"
sort -u -o "$path" "$path"
