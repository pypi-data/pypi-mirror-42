import sys
import platform

if __name__ == '__main__':
    
    if sys.version_info[0] == 3:
        try:
            import wx
        
        except ImportError:
            sys.stderr.write("\n\n[ERROR] 'wx' module is required.\n"
                        "DrumsT for Python3 need wxPython-Phoenix.\n"
                        "You could install it with 'pip' tool,\n"
                        "visit the wxPython web page for more info: "
                        "<https://wxpython.org>\n\n"
                            )
            sys.exit(1)
        
        from drumsT import DrumsT
        DrumsT.main()
    
    else:
        sys.stderr.write("\n\n[ERROR] Not a supported Python version.\n"
                         "Need Python3, you are using Python version "
                         "%s\n\n" % sys.version
                         )
        sys.exit(1)
        
