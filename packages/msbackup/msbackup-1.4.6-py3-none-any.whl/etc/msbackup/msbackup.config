######################
## MS-BACKUP CONFIG ##
######################

######################################
[DEFAULT]

# Path to backups.
# This dir will be created if it doesn't exist.
# This must be writable by the user the script is running as.
BACKUP_DIR = /var/lib/msbackup

# Number of days to keep daily backups.
DAYS_TO_KEEP = 7

# Which day to take the weekly backup from (1-7 = Monday-Sunday).
DAY_OF_WEEK_TO_KEEP = 1

# How many weeks to keep weekly backups.
WEEKS_TO_KEEP = 4

# Which day to take the monthly backup from (1-31).
DAY_OF_MONTH_TO_KEEP = 1

# How many months to keep monthly backups.
MONTHS_TO_KEEP = 24

# Files archiver.
ARCHIVER = tar

# Archive files encryptor.
ENCRYPTOR = gpg

######################################
[Archive-Tar]

# Command to run tar archiver (default /bin/tar).
# COMMAND = /bin/tar

# Archiver additional parameters (default --bzip2).
# ARCHIVER_PARAMS = --bzip2

# Archive file suffix (default .tar.bz2).
# SUFFIX = .tar.bz2

# In progress archive file suffix (default .in_progress).
# PROGRESS_SUFFIX = .in_progress

######################################
[Encrypt-GnuPG]

# Command to run GnuPG (default /usr/bin/gpg).
# COMMAND = /usr/bin/gpg

# Value of '--recipient' parameter of GnuPG.
# RECIPIENT = backup@compamy.com

# Encrypted archive file suffix (default .gpg).
SUFFIX = .gpg

######################################
[Backend-File]

# Source file or directory to archive.
# SOURCE =

# Exclude files, defined by patterns in list.
# Example: EXCLUDE = *.tmp,*.bak,*.in_progress
# EXCLUDE =

# Exclude files, defined by patterns in file.
# Example: EXCLUDE_from = /path/to/exclude.txt
# EXCLUDE_FROM =

######################################
[Backend-Mercurial]

# Optional system user to run backups as.
# If the user the script is running as doesn't match this the script terminates.
# Leave blank to skip check.
BACKUP_USER = hg

# Path to root of Mercurial repositories.
SOURCE = /var/lib/mercurial-server/repos/

# List of repo names, exluded from backup.
# Example: EXCLUDE = repo1,repo2,repo3
# EXCLUDE =

# Exclude repo names, defined in file.
# Example: EXCLUDE_from = /path/to/exclude.txt
# EXCLUDE_FROM =

# Path to backups.
# This dir will be created if it doesn't exist.
# This must be writable by the user the script is running as.
BACKUP_DIR = /var/lib/msbackup/mercurial

######################################
[Backend-Subversion]

# Optional system user to run backups as.
# If the user the script is running as doesn't match this the script terminates.
# Leave blank to skip check.
BACKUP_USER = svn

# Path to root of Subversion repositories.
SOURCE = /var/svn/

# List of repo names, exluded from backup.
# Example: EXCLUDE = repo1,repo2,repo3
# EXCLUDE =

# Exclude repo names, defined in file.
# Example: EXCLUDE_from = /path/to/exclude.txt
# EXCLUDE_FROM =

# Path to backups.
# This dir will be created if it doesn't exist.
# This must be writable by the user the script is running as.
BACKUP_DIR = /var/lib/msbackup/subversion

# Command to run svadmin util.
# SVNADMIN_COMMAND = /usr/bin/svnadmin

# Command to run compressor util (defaults /bin/bzip2).
# COMPRESSOR_COMMAND = /bin/bzip2

# Compressed file suffix (defaults .bzip2).
# COMPRESSOR_SUFFIX = .bzip2

# Compressor parameters (defaults -q9).
# COMPRESSOR_PARAMS = -q9

######################################
[Backend-PostgreSQL]

# Optional system user to run backups as.
# If the user the script is running as doesn't match this the script terminates.
# Leave blank to skip check.
BACKUP_USER = postgres

# Optional hostname to adhere to pg_hba policies.
# Will default to "localhost" if none specified.
# HOSTNAME = localhost

# Database server port.
# PORT = 5432

# Optional username to connect to database as.
# Will default to "postgres" if none specified.
# USERNAME = postgres

# List of database names, exluded from backup.
# Example: EXCLUDE = db1,db2,db3
# EXCLUDE =

# Exclude database names, defined in file.
# Example: EXCLUDE_from = /path/to/exclude.txt
# EXCLUDE_FROM =

# Path to backups.
# This dir will be created if it doesn't exist.
# This must be writable by the user the script is running as.
BACKUP_DIR = /var/lib/msbackup/postgresql

# Format of full database backups - {"plain"|"custom"} (default: "plain").
BACKUP_FORMAT = plain

# List of strings to match against in database name, separated by space,
# for which we only wish to keep a backup of the schema, not the data.
# Any database names which contain any of these values will be considered
# candidates. (e.g. "system_log" will match "dev_system_log_2010-01")
SCHEMA_ONLY_LIST = zabbix

# Command to run PostgreSQL cli - psql.
# PSQL_COMMAND = /usr/bin/psql

# Command to run PostgreSQL dump utility - pg_dump.
# PGDUMP_COMMAND = /usr/bin/pg_dump

# Command to run compressor util (defaults /bin/gzip).
# COMPRESSOR_COMMAND = /bin/gzip

# Compressed file suffix (defaults .gz).
# COMPRESSOR_SUFFIX = .gz

# Compressor parameters (defaults -q9).
# COMPRESSOR_PARAMS = -q9

######################################
