---
deployment:
  # Specifies the environment to which the application may be
  # deployed.
  {%- if spec.deployment.environments %}
  environments:
  {%- for env in spec.deployment.environments %}
  - name: {{ env.name }}
  {%- endfor %}
  {%- elif IS_QUANTUM_INIT %}
  environments:
  - name: production
  - name: staging
  - name: local
  {%- else %}
  environments: []
  {%- endif %}
